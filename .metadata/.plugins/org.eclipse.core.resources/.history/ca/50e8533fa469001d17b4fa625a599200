package practice;

public class Find {
	public static void main(String[] args) {
		
		int m=16;
		int n=2;
		int total=0;
		boolean status=false;
int i=1;
while(total<m)
{

	for(int k=1;k<100;k++)
	{
		int temp=i*n;
		total+=temp;	
		i++;
	if(total==m)		
	{
		System.out.println("true: "+i);
		status=true;
		break;
	}
	
	}
	

}
if(status==false)
{
	System.out.println("false");
}


	}

}
